<?xml version="1.0" encoding="UTF-8"?>

<process-definition
  xmlns=""  name="fetchEmails">
   <start-state name="start">
      <transition name="" to="hangon"></transition>
   </start-state>
   <task-node name="email">
      <task name="Email">
         <controller>
            <variable name="string_subject" access="read,write"></variable>
            <variable name="string_text" access="read,write"></variable>
            <variable name="files_attachments" access="read,write"></variable>
				<variable access="read,write" name="string_fromPersonal"></variable>
				<variable access="read,write" name="string_fromAddress"></variable>
         </controller><!--
         <assignment class="com.idega.jbpm.identity.JSONAssignmentHandler">
            <expression>
                variable(string_emailReadAssignmentExpression)
            </expression>
         </assignment>
      -->
      	  <assignment class="com.idega.jbpm.proxy.JbpmHandlerProxy"> 
			<handlerName>jsonAssignmentHandler</handlerName>
			<propertyMap key-type='java.lang.String' value-type='java.lang.String'>
				<entry><key>expression</key>
					<value>
		                variable(string_emailReadAssignmentExpression)
		            </value>
				</entry>
			</propertyMap>
		 </assignment>
      </task>
   </task-node>
   <state name="hangon"></state>
</process-definition>